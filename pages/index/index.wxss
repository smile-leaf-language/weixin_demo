.audio {
    margin-top: 30px;
}

.input {
    border: 1px solid #eee;
    width: 70%;
    margin: 0 auto;
    font-size: 14px;
    color: #000;
    padding-left: 20px;
    border-radius: 20px;
    background: #ddd;
}

.list {
    width: 70%;
    margin: 20px auto 0 auto;
    box-shadow: 0px 0px 5px 1px #aaa;
    border-radius: 5px;
}

.list view {
    font-size: 10px;
    color: #666;
    height: 30px;
    line-height: 30px;
    padding-left: 5px;
    border-bottom: 1px solid gainsboro;
}
